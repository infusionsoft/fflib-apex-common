{
    "name": "apex-common",
    "private": true,
    "version": "1.0.0",
    "description": "FFLIB Apex Common.",
    "scripts": {
        "open": "sfdx force:org:open",
        "pmd": "sfdx scanner:run -t ./force-app/main/default/classes/ --pmdconfig ./config/pmd/apex_ruleset.xml",
        "pmd:report": "sfdx scanner:run -t ./force-app/main/default/classes/ --pmdconfig ./config/pmd/apex_ruleset.xml --outfile ./config/pmd/pmd-report.csv",
        "push": "sfdx force:source:push --wait 30",
        "push:force": "sfdx force:source:push -f --wait 30",
        "webserver": "http-server --cors -c-1 -a localhost -p 8080 -o localhost/index.html",
        "test": "npm run test:unit",
        "test:apex:all": "sfdx force:apex:test:run --testlevel RunLocalTests --wait 30 --resultformat human",
        "test:unit": "sfdx-lwc-jest",
        "test:unit:watch": "sfdx-lwc-jest --watch",
        "test:unit:debug": "sfdx-lwc-jest --debug",
        "test:unit:coverage": "sfdx-lwc-jest --coverage"
    },
    "devDependencies": {
        "@prettier/plugin-xml": "^1.1.0",
        "@salesforce/eslint-config-lwc": "^3.2.0",
        "@salesforce/eslint-plugin-aura": "^2.0.0",
        "@salesforce/sfdx-lwc-jest": "^1.1.0",
        "@salesforce/sfdx-scanner": "^2.12.0"
    }
}
